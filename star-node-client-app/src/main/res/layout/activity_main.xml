<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Drawing"
        android:id="@+id/startDrawingButton"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pauseDrawingButton"
        android:layout_toStartOf="@+id/pauseDrawingButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause Drawing"
        android:id="@+id/pauseDrawingButton"
        android:layout_marginRight="47dp"
        android:layout_alignBaseline="@+id/startDrawingButton"
        android:layout_alignBottom="@+id/startDrawingButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"/>
</RelativeLayout>
